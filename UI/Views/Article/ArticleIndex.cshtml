@using PagedList.Mvc;
@model PagedList.IPagedList<Models.Articles>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/css/gg.css" rel="stylesheet" />
    <link href="~/Content/css/passport.css" rel="stylesheet" />
</head>
<body>
    <div class="maleft">
        <div class="allsite clearfix">
            <a href="/site/rss" target="_bank"><span class="rss">订阅RSS</span></a>
            <h2 class="fsl mb15 t550">全部文章</h2>
            <div class="allart r3">
                @foreach (var article in Model)
                {
                    <div class="oarticle clearfix pvl libdm">
                        <div class="scimg mrl">
                            <a href="" target="_blank" style="background: url(@article.Picture) no-repeat 0 -20px"></a>
                        </div>
                        <h3><a href="@Url.Action("ArticleDetails", "ArticleShow", new { id = article.ArticleID})"></a> @article.Title</h3>
                        <span class="pbs pts"><a href="@Url.Action("ArticleDetails", "ArticleShow", new { id = article.ArticleID})"></a> 发表于 @article.CreateTime</span>
                        <div class="jiep">
                            @article.HeadLine（<a href="@Url.Action("ArticleDetails", "ArticleShow", new { id = article.ArticleID})">查看全文</a>）
                        </div>
                        <div class="jimp"><span class="prm">来自：<a href="#" target="_blank"></a> @article.ArticleCategory1.ArticleCName</span><span class="right phm liscr">710次阅读</span></div>
                    </div>

                }
                <div class="page-list">
                    <div class="pagecout">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</div>
                    @Html.PagedListPager(Model, page => Url.Action("ArticleIndex", "Article", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                </div>
                @*<div class="pagination mt30 mb30">
                    <div class="page_PN"><div class="pagination"><span class="current">1</span><span class="floblock" style="cursor: pointer;"><a href="http://www.douguo.com/article/10">2</a></span><span class="floblock" style="cursor: pointer;"><a href="http://www.douguo.com/article/20">3</a></span><span class="floblock" style="cursor: pointer;"><a href="http://www.douguo.com/article/30">4</a></span><span class="floblock" style="cursor: pointer;"><a href="http://www.douguo.com/article/10">下一页</a></span><span class="floblock" style="cursor: pointer;"><a href="http://www.douguo.com/article/1150">尾页</a></span></div></div>
                </div>*@
            </div>
        </div>
    </div>
</body>
</html>